
<%- include("partials/header") %>
    <main class="content-center">       
        <div class="form-box">
        <form class="form" method="POST" action="/sign-in" id="signInForm" > 
            <span class="title">Sign in</span>
            <div class="form-container">
                <input type="email" required class="input" id="email" name="email" placeholder="Email">
                <input type="password" required class="input" id="password" name="password" placeholder="Password">
            </div>
            <button>Sign In</button>
        </form>
        <div class="form-section">
        <p>Do not have an account? <a href="/register">Sign up</a> </p>
        </div>
        </div>
    </main>
<%- include("partials/footer") %>